.row
  .col-md-8.col-md-offset-2
    = simple_form_for Image.new do |f|
      = f.file_field :src, multiple: true, name: "image[src]", style: 'display: none;'

    .text-center
      %button.btn.btn-default.btn-to-upload Select files to upload
    %br
    .progress{style: 'display: none;'}
      .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "0", :role => "progressbar", :style => "width: 0%"}




