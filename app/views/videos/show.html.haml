.text-center.video-title 
  = @video.title
.text-center
  = video_tag @video.source_url.to_s, width: 640, controls: true, autobuffer: true, class: "red-border"
%br     
.row
  .col-md-2.col-md-offset-3.text-center
    %i.fa.fa-upload.fa-lg
    %br
    = @video.user.email
  .col-md-2.text-center
    %i.fa.fa-eye.fa-lg
    %br
    = @video.views
  .col-md-2.text-center
    #score
      = @video.score.round(1)
    #rate{:rated => @rate}
      .rating
        %span{"data-score" => "5"} ☆
        %span{"data-score" => "4"} ☆
        %span{"data-score" => "3"} ☆
        %span{"data-score" => "2"} ☆
        %span{"data-score" => "1"} ☆
.row
  .col-md-6.col-md-offset-3
    %h5.tags-line
      - @video.tags.each do |tag|      
        = link_to tag.name, videos_path(tag: tag.name), class: 'tag'        
- if @video.description?
  %p.col-md-6.col-md-offset-3.video-description.well
    = @video.description

.row
  .col-md-6.col-md-offset-3
    #comments
      - if @video.comments.exists?
        - @comments.each do |comment|
          .comment  
            .comment-author
              = comment.user.email
            .comment-body
              = comment.comment
          %br

.row
  .col-md-6.col-md-offset-3      
    = simple_form_for @comment, url: add_comment_video_path, remote: true do |v|
      = v.input :comment, as: :text, label: 'new comment'
      = v.button :submit, value: 'comment', id: 'comment_button'
