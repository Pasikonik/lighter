!!!
%html{:lang => "pl_PL"}
  %head
    %meta{:charset => "utf-8"}
    %title Lighter.pl
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    %link{:href=>"https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css", :rel=>"stylesheet"}
    = csrf_meta_tags
%body
  %nav.navbar.navbar-default.navbar-inverse.navbar-static-top{:role=>"navigation"}
    .container    
      .navbar-header
        %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Rozwiń nawigacje
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{:href=>"/"}
          %i.fa.fa-fire.fa-fw.fa-lg.red-icon
          %b Lighter.pl
      .collapse.navbar-collapse{:id => "bs-example-navbar-collapse-1"}
        %ul.nav.navbar-nav
          %li
            = link_to "Aktualności", entries_path
          %li
            = link_to "Filmiki", videos_path
          %li
            = link_to "Galeria", images_path
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"} Zapalniczka
            %ul.dropdown-menu{:role => "menu"}
              %li
                %a{:href => "#"} Budowa
              %li
                %a{:href => "#"} Rodzaje
              %li
                %a{:href => "#"} Historia
          %li
            %a{:href => "#"} Tutoriale
        %form.navbar-form.navbar-left{:role => "search"}
          .form-group
            %input.form-control{:type => "text", :placeholder => "Szukaj"}
        - if user_signed_in?
          %ul.nav.navbar-nav.navbar-right
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                %i.fa.fa-user
                = current_user.email
                %span.caret.red-icon
              %ul.dropdown-menu{:role => "menu"}
                %li
                  %a{:href => "#"} Ustawienia
                %li
                  = link_to "Dodaj filmik", new_video_path
                %li
                  = link_to('Logout', destroy_user_session_path, :method => :delete)
        - else
          .btn-group.navbar-right
            %a.btn.btn-warning.navbar-btn{:role=>"button", "data-toggle" => "modal", "data-target" => "#registration"} Zarejestruj się            
            %a.btn.btn-default.navbar-btn{:type => "button", "data-toggle" => "modal", "data-target" => "#login"} Zaloguj się


  .container.main
    = render "layouts/login_modal"
    = render "layouts/registration_modal" 
    = yield
  .footer
    .container
      .text-center
        copyright © 2015 Michał Olejniczak
