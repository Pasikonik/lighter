!!!
%html{lang: "pl_PL"}
  %head
    %meta{charset: "utf-8"}
    %title Lighter.pl
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    %link{href: "https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css", rel: "stylesheet"}
    = csrf_meta_tags
%body
  :javascript
    window.fbAsyncInit = function() {
      FB.init({
        appId      : '364496227077078',
        xfbml      : true,
        version    : 'v2.3'
      });
    };

    (function(d, s, id){
       var js, fjs = d.getElementsByTagName(s)[0];
       if (d.getElementById(id)) {return;}
       js = d.createElement(s); js.id = id;
       js.src = "//connect.facebook.net/en_US/sdk.js";
       fjs.parentNode.insertBefore(js, fjs);
     }(document, 'script', 'facebook-jssdk'));
  %nav.navbar.navbar-default.navbar-inverse.navbar-static-top{:role=>"navigation"}
    .container    
      .navbar-header
        %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Rozwiń nawigacje
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{:href=>"/"}
          %i.fa.fa-fire.fa-fw.fa-lg.red-icon
          %b Lighter.pl
      .collapse.navbar-collapse{:id => "bs-example-navbar-collapse-1"}
        %ul.nav.navbar-nav
          %li
            = link_to "Aktualności", entries_path
          %li
            = link_to "Filmiki", videos_path
          %li
            = link_to "Galeria", images_path
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"} Zapalniczka
            %ul.dropdown-menu{:role => "menu"}
              %li
                %a{:href => "#"} Budowa
              %li
                %a{:href => "#"} Rodzaje
              %li
                %a{:href => "#"} Historia
          %li
            = link_to 'Tutoriale', tutorials_path
          %li
            %a{href: "#{}"}
              %i.fa.fa-search
        %form.navbar-form.navbar-left{:role => "search"}
          -# = form_tag(videos_path, :method => "get", id: "search-form") do
          -#   = text_field_tag :search, params[:search], placeholder: "Search Posts"
          -#   = submit_tag "Search"
            -# %input#inputSuccess2.form-control{:type => "text"}/
            -# %span.glyphicon.glyphicon-search.form-control-feedback
        - if user_signed_in?
          %ul.nav.navbar-nav.navbar-right
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                - if current_user.avatar?
                  = image_tag current_user.avatar_url, size: "20x20", class: 'avatar-frame'
                - else
                  %i.fa.fa-user
                = current_user.login
                %span.caret.red-icon
              %ul.dropdown-menu{:role => "menu"}
                %li
                  = link_to "Ustawienia", edit_user_registration_path
                %li
                  = link_to "Dodaj filmik", new_video_path
                %li
                  = link_to('Logout', destroy_user_session_path, :method => :delete)
        - else
          .btn-group.navbar-right
            %a.btn.btn-warning.navbar-btn{:role=>"button", "data-toggle" => "modal", "data-target" => "#registration"} Zarejestruj się            
            %a.btn.btn-default.navbar-btn{:type => "button", "data-toggle" => "modal", "data-target" => "#login"} Zaloguj się


  .container.main
    = render "layouts/login_modal"
    = render "layouts/registration_modal" 
    = yield
  .footer
    .container
      .text-center
        copyright © 2015 Michał Olejniczak
