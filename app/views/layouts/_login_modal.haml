#login.modal.fade{:role => "dialog", :tabindex => "-1", "aria-labelledby" => "mySmallModalLabel", "aria-hidden" => "true"}
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal"} Ã—
        %h3.text-center= t('basic.login')
      .modal-body
        - if alert
          %p.alert.alert-danger= alert
        = simple_form_for(:user, :url => user_session_path) do |f|
          .inputs
            = f.input :login, required: false, input_html: { id: 'login_field' }
            = f.input :password, required: false
            = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
            = f.button :submit, t('basic.sing_in'), class: 'btn btn-lg btn-success center-block'
        %br
        .text-center          
          = button_to t('basic.sing_in_with_fb'), user_omniauth_authorize_path(:facebook), class: 'btn btn-primary'
